<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.extension" value="do" />
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="true" />	
    
    <package name="helloworld"  extends="struts-default">
        
        <action name="login" class="com.tw.TestAction" method="login">
			
			<result name="test" type="redirectAction">
				<param name="actionName">main.do</param>
			</result>			
			
			<!-- 
			<result name="test" type="chain" >
				<param name="actionName">main.do</param>
			</result> 
			--> 
			 
			<!-- 			
			<result name="test" type="chain" >
				<param name="actionName">test1.do</param>
			</result>
			-->
			                     
        </action>
        
        <action name="main" class="com.tw.TestAction" method="main">	      	
            <result name="hello">/helloWorld.jsp</result>
            <result type="freemarker" name="hello1">/WEB-INF/template/success.ftl</result>
        </action>
        
        <action name="index" >
            <result>index.jsp</result>
        </action>

		
              
        
    </package>

</struts>
